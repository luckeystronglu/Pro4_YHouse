<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/music_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="那些曾让你流泪的歌曲"
        android:textSize="16dp"
        android:padding="14dp"
        android:textColor="@color/appcolor"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="14dp">
<ImageView
    android:id="@+id/music_iv_face"
    android:layout_width="106dp"
    android:layout_height="106dp"
    android:scaleType="centerCrop"
    android:src="@drawable/widget_cover_4x4"/>
    <TextView
        android:id="@+id/music_tv_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12300"
        android:layout_margin="8dp"
        android:textColor="@color/appcolorw"
        android:layout_alignBottom="@+id/music_iv_face" />
<ImageView
    android:id="@+id/music_iv_play"
    android:layout_width="40dp"
    android:layout_height="36dp"
    android:src="@drawable/detail_btn_play_normal"
    android:layout_alignBottom="@+id/music_iv_face"
    android:layout_alignRight="@+id/music_iv_face"
    android:layout_margin="8dp" />
    <TextView
        android:id="@+id/music_tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="我给你的爱"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/music_iv_face"
        android:layout_margin="8dp"/>
    <LinearLayout
        android:id="@+id/music_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textColor="@color/appcolor"
        android:layout_toRightOf="@+id/music_iv_face"
        android:layout_below="@+id/music_tv_info"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/music_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="贱贱贱贱"
        android:layout_marginRight="10dp"
        android:textColor="@color/appcolorh2"
        android:layout_above="@+id/music_tv_counts"
        android:layout_toStartOf="@+id/music_iv_header" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/music_iv_header"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/icon"
        android:layout_alignTop="@+id/music_iv_play"
        android:layout_alignEnd="@+id/music_ll" />
</RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:background="@color/appcolorh2"/>
</LinearLayout>