<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/food_item4_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/food_item4_tvtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sssssssssssssssssss"
        android:textColor="@color/appcolor"
        android:textSize="18dp"

        android:layout_margin="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/food_item4_tvaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朝外大街"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/food_item4_tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="健健餐厅"/>
        <TextView
            android:id="@+id/food_item4_tvprive"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="800/元"
            android:gravity="right"
            android:textColor="@color/appcolorj"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/food_item4_tvkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1020KM"
            android:layout_margin="4dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/food_item4_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">
    </LinearLayout>
</LinearLayout>