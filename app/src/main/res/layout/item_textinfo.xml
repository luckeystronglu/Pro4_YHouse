<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/video_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon"/>
        <TextView
            android:id="@+id/video_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意志坚定的小泰迪"
            android:layout_toRightOf="@+id/video_iv"
            android:layout_marginLeft="4dp" />
        <TextView
            android:id="@+id/text_info_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:paddingTop="10dp"
            android:layout_toLeftOf="@+id/ding"/>
        <ImageView
            android:id="@+id/ding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ding_not_clicked_black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:id="@+id/text_info_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:layout_toRightOf="@+id/video_iv"
            android:layout_below="@+id/ding"
            android:background="@color/appcolorh"
            >
        </LinearLayout>
        <TextView
            android:id="@+id/video_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:layout_toRightOf="@+id/video_iv"
            android:layout_below="@+id/text_info_ll"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/appcolor"/>
    </RelativeLayout>


</LinearLayout>