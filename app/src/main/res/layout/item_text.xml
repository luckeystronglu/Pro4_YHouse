<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/video_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon"/>
        <TextView
            android:id="@+id/video_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意志坚定的小泰迪"
            android:layout_toRightOf="@+id/video_iv"
            android:layout_marginLeft="4dp"
            android:textColor="@color/appcolorr"/>
        <TextView
            android:id="@+id/video_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:layout_toRightOf="@+id/video_iv"
            android:layout_below="@+id/video_tv_name"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6dp"/>
    </RelativeLayout>




    <TextView
        android:id="@+id/video_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="哈哈哈哈哈"
        android:textSize="16dp"
        android:textColor="@color/appcolor"
        android:layout_marginLeft="8dp"
        android:padding="4dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView
        android:id="@+id/ding"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="111"
        android:gravity="center_vertical"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/ding_not_clicked_black"/>
    <TextView
        android:id="@+id/cai"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="111"
        android:gravity="center_vertical"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/cai_not_clicked_black"/>
    <TextView
        android:id="@+id/share"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="111"
        android:gravity="center_vertical"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/forward_black"/>
    <TextView
        android:id="@+id/command"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="111"
        android:gravity="center_vertical"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/commend_black"/>

</LinearLayout>

    <LinearLayout
        android:id="@+id/text_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/appcolorh">
    </LinearLayout>

<View
    android:id="@+id/view_bottom"
    android:layout_width="match_parent"
    android:layout_height="16dp"
    android:background="@color/appcolorh"/>
    <TextView
        android:id="@+id/text_info_pl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="段子评论"
        android:layout_margin="8dp"
        android:visibility="gone"/>
</LinearLayout>